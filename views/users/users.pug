extends ../layout

block content
  .w3-card-4
    if lista.length > 0
      .w3-container
        table(class="w3-table-all")
          tr
            th Username
            th Nome
            th Email
            th Nivel
            th Curso
            th Data registo
            th Data Last
            th Filia√ßao
            th Password
          each a in lista
            tr
              td
                a(href='/users/'+a._id) #{a.username}
              td= a.name
              td= a.email
              td= a.level
              td= a.curso
              td= a.dateRegister
              td= a.dateLast
              td= a.affiliation
              td= a.password
    else
      div(class="w3-container")
        p There are no users...
    .w3-container.w3-deep-orange.w3-center
      a.w3-btn.w3-hover-orange.w3-sand.w3-round-xxlarge.w3-margin(href="/signup") Registar Utilizador
      a.w3-btn.w3-hover-orange.w3-sand.w3-round-xxlarge.w3-margin(href="/") Voltar a homepage