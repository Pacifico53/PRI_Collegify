extends layout

block content
  .w3-card-4
    header.w3-container.w3-khaki
      h3 Lista de Posts
    if lista.length > 0
      .w3-container
        table(class="w3-table-all")
          tr
            th Type
            th Title
            th Subtitle
            th Uploader
            th Description
            th Date Creation
            th Date Register
            th Visibility
            th Comments
            th Tags
            th Meta
          each a in lista
            tr
              td= a.type
              td
                a(href='/posts/'+a._id) #{a.title}
              td= a.subtitle
              td= a.uploader
              td= a.description
              td= a.dateCreation
              td= a.dateRegister
              td= a.visibility
              td= a.comments
              td= a.tags
              td= a.meta
    else
      div(class="w3-container")
        p There are no posts...
    div(class="w3-container w3-khaki")
      p
        a(href='/posts/upload') Register new post.
    div(class="w3-container w3-khaki")
      p
        a(href='/') Back to homepage.
    footer(class="w3-container w3-khaki")
      address Gerado por Collegify :: 2020