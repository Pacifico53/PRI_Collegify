extends layout

block content
  .w3-card-4
    if lista.length > 0
      .w3-container.w3-padding
        table(class="w3-table-all")
          tr
            th Type
            th Title
            th Subtitle
            th Uploader
            th Tags
            th Feedback
          each a in lista
            tr
              td= a.type
              td
                a(href='/posts/'+a._id) #{a.title}
              td= a.subtitle
              td= a.uploader
              td
                each tag in a.tags
                  span.w3-tag.w3-teal
                    a(href='/posts/tag/'+tag)= tag
                  span
              td ⭐#{a.meta.favs.length} 👍#{a.meta.votes.length} 💬#{a.comments.length}


    else
      div(class="w3-container")
        p There are no posts...
block footer