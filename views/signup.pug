html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/w3.css')
  body
    .w3-container.w3-deep-orange
      h2.w3-left= title
    .w3-container.w3-sand.w3-margin.w3-border
      form.w3-container(action="/users/signup" method="POST")
        p
        label.w3-bold Nome
        input.w3-input.w3-border(name="name" type="text")
        p      
        label.w3-bold Email
        input.w3-input.w3-border(name="email" type="text")
        p      
        label.w3-bold Username
        input.w3-input.w3-border(name="username" type="text")
        p      
        label.w3-bold Password
        input.w3-input.w3-border(name="password" type="password")
        p
        lable Tipo de Utilizador
        select.w3-input.w3-border(name="level")
          option(value="produtor" selected) Produtor
          option(value="consumidor") Consumidor
        p
        input.w3-check(name="affiliation" type="checkbox" checked value="docente")
        lable.w3-margin Docente
        p
        label.w3-bold Curso
        input.w3-input.w3-border(name="curso" type="text")
        p
        if(errormsg)
          p
            b.w3-text-red #{errormsg}
        button.w3-btn.w3-deep-orange.w3-hover-black.w3-round-xxlarge.w3-margin(type="submit") Sign Up
      .w3-container
        a.w3-btn.w3-round-xxlarge.w3-margin.w3-pale-red(href="/auth/google") Signup With Google
        p
        a.w3-btn.w3-round-xxlarge.w3-margin.w3-blue(href="/auth/facebook") Signup With Facebook

    .w3-container.w3-deep-orange.w3-center
      a.w3-btn.w3-hover-orange.w3-sand.w3-round-xxlarge.w3-margin(href="/login") Login
      a.w3-btn.w3-hover-orange.w3-sand.w3-round-xxlarge.w3-margin(href="/") Voltar a homepage
