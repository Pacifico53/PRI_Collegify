doctype html
html(lang="en")
  head
    title Upload post
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='../stylesheets/loginstyle.css')
  body
    #main
      form(action="/posts/upload" method="POST" enctype="multipart/form-data")
        div.label Upload conteúdo
        div.username
          input(name="title" type="text" placeholder="Title*")
        div.username
          input(name="subtitle" type="text" placeholder="Subtitle")
        div.username
          input(name="description" type="text" placeholder="Description")
        div.username
          input(name="curso" type="text" placeholder="Curso")
        div.username
          input(name="ano" type="text" placeholder="Ano")
        div.username
          input(name="semestre" type="text" placeholder="Semestre")          
        div
          select(name="type").w3-input.w3-border
            option(value="Relatório" selected) Relatório
            option(value="Tpc") Tpc
            option(value="Artigo") Artigo
            option(value="Tese") Tese
            option(value="Aplicação") Aplicação
            option(value="Slides") Slides
            option(value="Teste") Teste
        div
          label Privado
            input(name="visibility" type="radio" value="Privado") 
          label Público
            input(name="visibility" type="radio" value="Público" checked) 
        div.username
          input(name="tags" type="text" placeholder="Tags")
        input(class="w3-input w3-border w3-light-grey" type="file" name="myFile")
        button(type="submit") Upload
        p
          a(href="/") Voltar para Homepage