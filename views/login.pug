html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/w3.css')
  body
    .w3-container.w3-deep-orange
      h2.w3-left= title
    .w3-container.w3-sand.w3-margin.w3-border
      form.w3-container(action="/users/login" method="POST")
        p
        .w3-left-align.w3-margin
          label.w3-bold Username
        input.w3-input.w3-border(name="username" type="text" placeholder="Username")
        p   
        .w3-left-align.w3-margin   
          label.w3-bold Password
        input.w3-input.w3-border(name="password" type="password" placeholder="Password")

        .w3-left-align
          button.w3-btn.w3-hover-black.w3-border.w3-deep-orange.w3-round-xxlarge.w3-margin(type="submit" name="loginbutton") Login
          button.w3-btn.w3-hover-black.w3-deep-orange.w3-round-xxlarge.w3-margin(type="button" name="resetbutton") Reset password   
    .w3-container
        a.w3-btn.w3-round-xxlarge.w3-margin.w3-pale-red(href="/auth/google") Login With Google 
        p
        a.w3-btn.w3-round-xxlarge.w3-margin.w3-blue(href="/auth/facebook") Login With Facebook
    .w3-container.w3-deep-orange.w3-center
      a.w3-btn.w3-hover-orange.w3-sand.w3-round-xxlarge.w3-margin(href="/signup") Sign up
      a.w3-btn.w3-hover-orange.w3-sand.w3-round-xxlarge.w3-margin(href="/") Voltar a homepage
