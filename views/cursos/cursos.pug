extends layout

block content
  .w3-card-4
    header.w3-container.w3-khaki
      h3 Lista de Cursos
    if lista.length > 0
      .w3-container
      - var values = [];
      each val in lista
        -
          if(!values.includes(val.meta.curso) && val.meta.curso){
            values.push(val.meta.curso)
          }
      - values.sort();
      ul
        each val in values
          li
            a(href='/cursos/'+val) #{val}
    else
      div(class="w3-container")
        p Ainda não há cursos...
    div(class="w3-container w3-khaki")
      p
        a(href='/posts/upload') Criar novo post.
    div(class="w3-container w3-khaki")
      p
        a(href='/') Voltar para homepage.
    footer(class="w3-container w3-khaki")
      address Gerado por Collegify :: 2020