extends layout

block content
  .w3-card-4
    header.w3-container.w3-khaki
      h3 Lista de Posts
    if lista.length > 0
      .w3-container
        table(class="w3-table-all")
          tr
            th Title
            th Path
            th Uploader
            th Description
            th Date
            th Comments
            th Tags
            th Meta
          each a in lista
            tr
              td= a.title
              td= a.path
              td= a.uploader
              td= a.description
              td= a.date
              td= a.comments
              td= a.tags
              td= a.meta
    else
      div(class="w3-container")
        p There are no posts...
    div(class="w3-container w3-khaki")
      p
        a(href='/signup') Register new.
    div(class="w3-container w3-khaki")
      p
        a(href='/') Back to homepage.
    footer(class="w3-container w3-khaki")
      address Gerado por Collegify :: 2020